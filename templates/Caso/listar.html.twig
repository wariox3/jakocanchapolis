{% extends 'base.html.twig' %}

{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block body %}

    {{ include('bloquesGenerales/menuEncabezado.html.twig') }}

    {{ include('bloquesGenerales/menuIzquierdo.html.twig') }}
    {% block content %}
        <div class="main-body">
        <div class="current-bar">
            <h2>Casos (Incidencias)</h2>
        </div>
        <div class="main-content">

        <div class="row">
            <div class="col-xs-12">
                <div class="page-title-box">
                    <a href="{{ path('registrarCaso') }}">
                        <button class="btn btn-success btn-bordered waves-effect waves-light" style="float: right;"><span class="mdi mdi-plus"></span> Nueva</button>
                    </a>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        {{form_start(form) }}
        <div class="row">
            <div class="col-md-12">
                <div class="card-box">
                    <div class="panel panel-default">
                        <div class="panel-heading">Filtros de busqueda</div>
                        <div class="grid-container">
                            <div class="col-sm-4">
                                {{ form_label(formFiltro.clienteRel) }}
                                {{ form_widget(formFiltro.clienteRel) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_label(formFiltro.estadoEscalado) }}
                                {{ form_widget(formFiltro.estadoEscalado) }}
                            </div>

                            <div class="col-sm-4">
                                {{ form_label(formFiltro.estadoTarea) }}
                                {{ form_widget(formFiltro.estadoTarea) }}
                            </div>

                            <div class="col-sm-4">
                                {{ form_label(formFiltro.estadoTareaTerminada) }}
                                {{ form_widget(formFiltro.estadoTareaTerminada) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_label(formFiltro.estadoTareaRevisada) }}
                                {{ form_widget(formFiltro.estadoTareaRevisada) }}
                            </div>

                        </div>
                        <div class="form-group form-group-sm">
                            <div class="col-sm-offset-2 col-sm-10">
                                {{ form_widget(formFiltro.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                            </div>
                        </div>
                    </div>
                    <br>
                    <hr>
                    <div class="table-responsive">
                        <table id="casos-general" class="table table-hover m-0">

                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fecha</th>
                                <th>F_C</th>
                                <th>Cliente</th>
                                <th>Soporte</th>
                                <th>Contacto</th>
                                <th>Categoría</th>
                                <th>Descripción</th>
                                <th>Prioridad</th>
                                <th>At</th>
                                <th>So</th>
                                <th>Ta</th>
                                <th>Dllo</th>
                                <th>Reab</th>
                                <th>Esca</th>
                                <th>Ed</th>
                                <th>Ver</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for caso in casos %}
                                <tr>
                                    <td>{{ caso.codigoCasoPk }} {% if caso.estadoSolicitudInformacion == true and caso.estadoRespuestaSolicitudInformacion == false %}<i class=" glyphicon glyphicon-exclamation-sign " style="color:red;"></i> {% elseif caso.estadoSolicitudInformacion == true and caso.estadoRespuestaSolicitudInformacion == true %}<i class=" glyphicon glyphicon-exclamation-sign " style="color:green;">{% endif %}</td>
                                    <td> {{ caso.fechaRegistro|date('y-m-d') }}</td>
                                    <td>{% if caso.fechaCompromiso != null %} {{ caso.fechaCompromiso|date('y-m-d') }}{%  endif %}</td>
                                    <td>
                                        <strong>{{ caso.clienteRel.nombreComercial }}</strong>
                                    </td>
                                    <td>{{ caso.soporte}}</td>
                                    <td title="{{ caso.correo }}">{{ caso.contacto }}</td>
                                    <td>
                                        <span class="label" style="background-color: {{ caso.categoriaRel.color }}">{{ caso.categoriaRel.codigoCategoriaCasoPk }}</span>
                                    </td>
                                    <td><strong>{{ caso.asunto }} </strong> - {{ caso.descripcion }}</td>
                                    <td>
                                                    <span class="label" style="background-color: {% if caso.prioridadRel.color != null %} {{ caso.prioridadRel.color }} {% else %} #efefef {% endif %};">
                                                        {% if caso.prioridadRel is defined or caso.prioridadRel != null %}
                                                            {{ caso.prioridadRel.nombre }}
                                                        {% else %}
                                                            Sin prioridad
                                                        {% endif %}
                                                    </span>
                                    </td>
                                    {% set deshabilitar = '' %}
                                    {% if caso.estadoSolicitudInformacion ==  true and caso.estadoRespuestaSolicitudInformacion == false %}
                                        {% set deshabilitar = 'disabled' %}
                                    {%  endif %}

                                    <td>
                                        {% if caso.estadoAtendido %}
                                            <button class="btn btn-success btn-xs" type="submit" name="casoAtender" disabled value="{{ caso.codigoCasoPk }}" title="{{ caso.codigoUsuarioAtiendeFk}}">
                                                <i class="glyphicon glyphicon-thumbs-up"></i>Atender</button>
                                        {% else %}
                                            <button class="btn btn-danger btn-xs" type="submit" name="casoAtender"  value="{{ caso.codigoCasoPk }} {{ deshabilitar }}">
                                                <i class="glyphicon glyphicon-thumbs-down"></i>Atender</button>
                                        {% endif %}
                                    </td>
                                    <td>

                                        <a {{ deshabilitar }} href="javascript:abrirVentana('{{ path('registrarSolucion', { 'codigoCaso':  caso.codigoCasoPk }) }}','Agregar solución',800, 1200)"
                                                              class="btn btn-default waves-effect waves-light btn-xs"><i
                                                    class="glyphicon glyphicon-flag"
                                                    style="padding: 3px;"></i>solucion
                                        </a>

                                    </td>
                                    <td>

                                        <a {{ deshabilitar }} href="javascript:abrirVentana('{{ path('registrarTareaDesdeCaso', { 'codigoCaso':  caso.codigoCasoPk }) }}','Crear Tarea',800,1200)"
                                                              class="btn btn-purple waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-cog" style="padding: 3px;"></i>
                                            TareaDesdeCaso
                                        </a>

                                    </td>
                                    <td>
                                        {% if caso.estadoTarea == 1 %}
                                            {% if caso.estadoTareaTerminada == 1 %}
                                                {% if caso.estadoTareaRevisada == 1 %}
                                                    <a {{ deshabilitar }} class ="btn btn-success waves-effect waves-light btn-xs m-b-5" href="{{ path("listaTareaCaso") }}/{{ caso.codigoCasoPk }}"> <i class="glyphicon glyphicon-eye-open"></i></a>
                                                {% else %}
                                                    <a {{ deshabilitar }} class ="btn btn-warning waves-effect waves-light btn-xs m-b-5" href="{{ path("listaTareaCaso") }}/{{ caso.codigoCasoPk }}"> <i class="glyphicon glyphicon-eye-open"></i></a>
                                                {% endif %}
                                            {% else %}
                                                <a {{ deshabilitar }} class ="btn btn-danger waves-effect waves-light btn-xs m-b-5" href="{{ path("listaTareaCaso") }}/{{ caso.codigoCasoPk }}"> <i class="glyphicon glyphicon-eye-open"></i></a>
                                            {% endif %}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if caso.estadoReabierto == true  %}
                                            <a {{ deshabilitar }} onclick="return false" disabled=""
                                                                  class="btn btn-danger waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-fire" style="padding: 3px;"></i>
                                                reabierto</a>

                                        {% endif %}
                                    </td>

                                    <td>
                                        {% if caso.estadoEscalado != null %}
                                            <button {{ deshabilitar }} class="btn btn-danger btn-xs" type="submit" name="casoEscalar"  value="{{ caso.codigoCasoPk }}" disabled>
                                                <i class="glyphicon glyphicon-arrow-up"></i>Escalar</button>
                                        {% else %}
                                            <button {{ deshabilitar }} class="btn btn-succes btn-xs" type="submit" name="casoEscalar"  value="{{ caso.codigoCasoPk }}">
                                                <i class="glyphicon glyphicon-arrow-up"></i>Escalar</button>
                                        {% endif %}

                                    </td>
                                    <td>
                                        {% if caso.estadoSolucionado == false and caso.estadoAtendido == false%}
                                            <a {{ deshabilitar }} href="{{ path('registrarCaso', { 'codigoCaso':  caso.codigoCasoPk }) }}"
                                                                  class="btn btn-purple waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-pencil" style="padding: 3px;">registro</i>
                                            </a>

                                            <a></a>
                                        {% else %}
                                            <a {{ deshabilitar }} href="{{ path('registrarCaso', { 'codigoCaso':  caso.codigoCasoPk }) }}" onclick="return false" disabled=""
                                                                  class="btn btn-purple waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-pencil" style="padding: 3px;">registro</i>
                                            </a>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a  href="{{ path('casoDetalle', { 'codigoCaso':  caso.codigoCasoPk }) }}"
                                            class="btn btn-info waves-effect waves-light btn-xs"><i
                                                    class="glyphicon glyphicon-eye-open"></i>Detalle
                                        </a>
                                    </td>

                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div> <!-- end card -->
                </div>
            </div>
            <!-- end col -->

        </div>
        {{ form_end(form) }}
    {% endblock content %}
    <div class="btn-group" style="float: left">
        <div class="btn btn-default ">Registros <span
                    class="badge">{{ casos.getTotalItemCount }}</span></div>
        <div class="btn-group"
             style="float: left;margin: 0px;padding-top: 0px">{{ knp_pagination_render(casos) }}</div>
    </div>
    </div>
    </div>


    {{ include('bloquesGenerales/pie.html.twig') }}
{% endblock %}