{% extends 'base.html.twig' %}
    {% block body %}

        {#inicio modal#}
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <button type="button" class="close" onclick="window.close()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Mensaje:</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.mensaje,{'attr': {'rows':'10'}}) }}
                                    {{ form_widget(form.ccJefe) }}
                                </div>
                            </div>
                            <hr>
                            <div class="form-group">
                                <div class="col-md-12">
                                    {{ form_widget(form.enviar, { 'attr': {'class': 'btn btn-success btn-bordered waves-effect w-md waves-light m-b-5','style':'float:right;margin-left:5px;'} }) }}
                                    <a href="#" onclick="window.close()" class="btn btn-default btn-bordered waves-effect w-md m-b-5" style="float: right;">CANCELAR</a>
                                </div>
                            </div>

                        </div>
                    </div>
                    {{ form_end(form) }}
                    {#fin modal#}
                </div>
            </div>
        </div>
    {% endblock %}
