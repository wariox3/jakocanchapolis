{% extends 'base.html.twig' %}

{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block body %}

    <div id="wrapper">
        {{ include('bloquesGenerales/menuEncabezado.html.twig') }}

        {{ include('bloquesGenerales/menuIzquierdo.html.twig') }}
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="page-title-box">
                                    <h4 class="page-title"><i class="glyphicon glyphicon-transfer"></i> Cambiar Estado Llamada</h4>
                                    <a href="{{ path('listadoLlamadasUsuario') }}">
                                        <button class="btn btn-success btn-bordered waves-effect waves-light" style="float: right;"><span class="mdi mdi-backspace"></span> Volver a Mis llamadas</button>
                                    </a>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <h4 class="m-t-0 header-title"><b>Datos de la llamada</b></h4>
                                    {#<h5>Fecha: {{ fecha|date('d/m/Y - H:i:s') }}</h5>#}
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-12">
                                            {{ form_start(form, { 'attr': {'class': 'form-horizontal','novalidate':'novalidate'} }) }}

                                            <div class="form-group">
                                                <label class="col-md-2 control-label" for="_telefono">Cliente: </label>
                                                <div class="col-md-5">
                                                    {{ form_widget(form.clienteRel,{'attr':{'readonly':'true'}}) }}
                                                </div>
                                                <label class="col-md-2 control-label" for="_telefono">Categoría:</label>
                                                <div class="col-md-3">
                                                    {{ form_widget(form.categoriaRel,{'attr':{'readonly':'true'}}) }}
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <label class="col-md-2 control-label" for="_telefono">Contacto:</label>
                                                <div class="col-md-10">
                                                    {{ form_widget(form.nombreContacto,{'attr': {'readonly':'true'}}) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-2 control-label" for="_telefono">Teléfono:</label>

                                                <div class="col-md-5">
                                                    {{ form_widget(form.telefono,{'attr': {'data-mask':'(999) 999-9999','readonly':'true'}} ) }}
                                                </div>
                                                <label class="col-md-2 control-label" for="_telefono">Extensión:</label>
                                                <div class="col-md-3">
                                                    {{ form_widget(form.extension,{'attr': {'data-mask':'(9999)','readonly':'true'}}  ) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-2 control-label" for="_telefono">Tema:</label>
                                                <div class="col-md-10">
                                                    {{ form_widget(form.tema,{'attr': {'rows':'5','readonly':'true'}}  ) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-2 control-label">Descripción:</label>
                                                <div class="col-md-10">
                                                    {{ form_widget(form.descripcion,{'attr': {'rows':'5'}}  ) }}

                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-2 control-label">Estado:</label>
                                                <div class="col-md-10">
                                                    {{ form_widget(form.estadoRel ) }}
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-success btn-bordered waves-effect w-md waves-light m-b-5','style':'float:right;margin-left:5px;'} }) }}
                                                    <a href="{{ path('listadoLlamadasUsuario') }}" class="btn btn-default btn-bordered waves-effect w-md m-b-5" style="float: right;">CANCELAR</a>
                                                </div>
                                            </div>
                                            {{ form_rest(form) }}
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endblock content %}
                </div> <!-- container -->
            </div> <!-- content -->
        </div>
        {{ include('bloquesGenerales/pie.html.twig') }}
    </div>
{% endblock %}